<div
  class="ui vertical fluid menu"
  style="position: fixed; width: 20% !important; height: auto; z-index: 100;"
>
  @each(main in mainmenu)
    @if(main.link === currentRoute)
      <div class="item">
        <div class="header">
          {{ main.menu }}
        </div>
        @each(sub in submenu)
          @if(sub.mainmenu === main.id)
            <a class="item" href="#section{{ sub.id }}">{{ sub.menu }}</a>
          @end
        @endeach
      </div>
    @end
  @endeach
</div>
